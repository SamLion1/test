<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_theme().
 */
function mon_module_theme()
{
    return array(
        'panel_page' => array(
            'template' => 'panel_page',
            'variables' => array('content' => NULL)
        ),
        'panel_bloc' => array(
            'template' => 'panel_bloc',
            'variables' => array('content' => NULL)
        )
    );
}

